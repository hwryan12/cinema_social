<% if current_user %>
  <p style="text-align: center; margin-top: 20px;">
    <%= link_to "Log Out", logout_path, method: :delete, style: "background-color: #4CAF50; color: #FFFFFF; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none; font-size: 1rem; font-weight: bold;" %>
  </p>
<% else %>
  <p style="text-align: center; margin-top: 20px;">
    <%= link_to "Create New User", "/register", style: "background-color: #4CAF50; color: #FFFFFF; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none; font-size: 1rem; font-weight: bold;" %>
    <br>
    <%= link_to "Log In", login_path, style: "background-color: #4CAF50; color: #FFFFFF; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none; font-size: 1rem; font-weight: bold;" %>
  </p>
<% end %>

<div id="existing_users" style="margin-top: 20px;">
  <ul style="list-style-type: none; padding: 10px 0; margin: 0;">
    <li style="font-weight: bold;">All Users:</li><br>
    <% @users.each do |user| %>
      <li style="margin-bottom: 10px;">
        <%= link_to "#{user.name}", "/users/#{user.id}", style: "background-color: #EEE; color: #333; padding: 10px 20px; border-radius: 5px; text-decoration: none; font-size: 1rem; font-weight: bold;" %>
      </li>
    <% end %>
  </ul>
</div>